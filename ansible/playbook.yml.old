---
- hosts: all
  become: yes
  remote_user: vagrant
  become_method: sudo
  pre_tasks:
    - name: "install EPEL repo"
      package: name="epel-release" state="latest"
    
  tasks:
    - name: "update packages"
      package: name="*" state="latest"

    - name: "install packages"
      package:
        name: "{{ item }}"
        state: "latest"
      with_items:
        - mc
        - tree
        - libselinux-python
        - git
        - ansible
